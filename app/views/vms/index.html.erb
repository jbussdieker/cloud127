<h1>Virtual Machines</h1>

<p class="well">
  <%= link_to 'New VM', new_vm_path, class: "btn" %>
</p>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Status</th>
    <td></th>
    <th></th>
  </tr>

<% @vms.each do |vm| %>
  <tr>
    <td><%= link_to vm.name, vm %></td>
    <td><%= vm["Image"] %></td>
    <td><%= status_badge(vm.status) %></td>
    <td>
      <%= link_to 'Start', start_vm_path(vm) if vm.status == "stopped" %>
      <%= link_to 'Stop', stop_vm_path(vm) if vm.status == "running" %>
    </td>
    <td><%= link_to '', vm_path(vm), method: :delete, confirm: "Are you sure?", class: "icon-trash" %></td>
  </tr>
<% end %>
</table>

<br />

